{
  "name": "pod",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "prepare_dev": "node create_dev_structure.mjs",
    "prepare_dist": "node create_build_structure.mjs",
    "build_frontend": "vite build src/frontend -c vite.config.prod.frontend.ts",
    "build_backend": "vite build -c vite.config.prod.backend.ts",
    "dev": "npm run prepare_dev && node -r ts-node/register -r tsconfig-paths/register src/backend/app.ts",
    "build": "tsc && npm run prepare_dist && npm run build_backend && npm run build_frontend",
    "run_production": "cd dist && npm run server",
    "test": "vitest",
    "test_ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^18.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jsdom": "^21.1.7",
    "@types/mithril": "^2.2.7",
    "@types/node": "^24.0.10",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "mithril-query": "git+https://github.com/JodliDev/mithril-query",
    "rollup-plugin-node-externals": "^8.0.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@solana/spl-memo": "^0.2.5",
    "@solana/web3.js": "^1.98.2",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "cookie-parser": "^1.4.7",
    "express": "^5.1.0",
    "kysely": "^0.28.2",
    "mithril": "^2.3.3",
    "sqlmorpheus": "^0.2.1",
    "vite-express": "^0.21.1"
  }
}
